<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pashmina Arts, Made by Nepal hand"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nepali Pashmina"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/imageView"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/two" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="25dp"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color:"
                    android:fontFamily="@font/sans"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/colorOrange"
                        android:layout_marginRight="5dp" />
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/colorAccent"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="#ff0000"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="5dip"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_backgroung_rectangle"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginRight="35dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_off"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Be the first to rate"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/small_text_size"
                    android:paddingLeft="4dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="-25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:id="@+id/value"
                    android:fontFamily="@font/sans"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:id="@+id/ratingBar"
                    android:rating="3.5"
                    android:numStars="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/colorOrange"/>


                <!--<RatingBar-->
                    <!--android:id="@+id/ratingBar"-->
                    <!--android:stepSize="0.5"-->
                    <!--android:numStars="4"-->
                    <!--android:rating="4.5"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--style = "?android:attr/ratingBarStyleSmall"-->
                    <!--android:progressTint="@color/colorOrange"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:fontFamily="@font/sans"
                    android:textSize="@dimen/small_text_size"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorBackgroundGrey">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_one"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"
                android:text="lorem ipsum placeholder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_two"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"
                android:text="text commonly used to demonstrate "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_three"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"
                android:text="the meaning of the text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_four"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"
                android:text="this ipsum text document"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorBackgroundGrey">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference site Reference site about Reference site about,giving information on its origins,giving information on its origins,Reference site about Lorem,giving information on its origins,Reference site about Lorem,giving information on its Product Details."
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Contact Seller"
                android:fontFamily="@font/sans"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>