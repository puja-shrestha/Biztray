<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:id="@+id/image"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Decorative art"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium_text_size"
                android:layout_weight="3"
                android:id="@+id/heading"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sans"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="60dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:textColor="#d2cfcf"
                android:id="@+id/subHeading"
                android:fontFamily="@font/sans"
                android:text="Decoration"
                android:textSize="@dimen/very_small_text_size"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-55dp"
                android:text="Rs. 22,000"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"
                android:layout_weight="1"
                android:id="@+id/price"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />
            <!--<RatingBar-->
                <!--android:id="@+id/ratingBar"-->
                <!--android:stepSize="1"-->
                <!--android:numStars="6"-->
                <!--android:rating="2.5"-->
                <!--android:paddingLeft="7dp"-->
                <!--style = "?android:attr/ratingBarStyleSmall"-->
                <!--android:progressTint="@color/colorOrange"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"/>-->
            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/ratingBar"
                android:rating="3.5"
                android:numStars="5"
                android:paddingLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/colorOrange"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <!--<Button-->
                <!--android:id="@+id/button2"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginLeft="31dp"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@color/colorOrange"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:text="-30%" />-->

            <TextView
                android:id="@+id/button2"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:padding="6dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWhite"
                android:text="-30"
                android:textSize="@dimen/small_sixteen_text_size"
                android:fontFamily="@font/sans"
                android:gravity="center"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_like_grey"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>